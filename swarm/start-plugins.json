{{ source "common.ikt" }}

{{ $dockerImage := ref "/infrakit/docker/image"}}
{{ $pluginsURL := cat (ref "/cluster/config/urlRoot") "start-plugins.json" | nospace}}
{{ $logDir := cat (env "INFRAKIT_HOME") "/logs" | nospace }}

[
    {
        "Plugin" : "infrakit",
        "Launch" : {
            "docker-run": {
                "Cmd" : "docker run -d --name infrakit {{ ref "/infrakit/docker/options/mount" }} {{ ref "/infrakit/docker/options/env" }} {{$dockerImage}} infrakit plugin start --wait --config-url {{$pluginsURL}} --exec os manager group-stateless flavor-swarm --log 5 > {{$logDir}}/infrakit.log 2>&1"
            }
        }
    }
    ,
    {
        "Plugin" : "manager",
        "Launch" : {
            "os": {
                "Cmd" : "infrakit-manager --name group  --proxy-for-group group-stateless os --leader-file {{env "INFRAKIT_HOME"}}/leader --store-dir {{env "INFRAKIT_HOME"}}/configs > {{$logDir}}/manager.log 2>&1"
            }
        }
    }
    ,
    {
        "Plugin" : "group-stateless",
        "Launch" : {
            "os": {
                "Cmd" : "infrakit-group-default --poll-interval 5s --name group-stateless --log 5 > {{$logDir}}/group-stateless.log 2>&1"
            }
        }
    }
    ,
    {
        "Plugin" : "flavor-swarm",
        "Launch" : {
            "os" : {
                "Cmd" : "infrakit-flavor-swarm --log 5 > {{$logDir}}/flavor-swarm.log 2>&1"
            }
        }
    }
]
